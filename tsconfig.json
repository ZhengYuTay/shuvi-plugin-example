{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "jsx": "preserve",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "shuvi.d.ts",
        "src"
    ]
}